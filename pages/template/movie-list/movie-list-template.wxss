@import '/pages/template/movie/movie-template.wxss';
.movie-list-container{
    display: flex;
    flex-direction: column;
    background-color:#fff;
    margin-bottom: 20rpx;
}
.inner-container{
    margin:0 auto 20rpx;
}
.movie-head{
    display: flex;
    /*align-items: center;*/
    flex-direction: row;
    justify-content: space-between;
    padding:30rpx 20rpx 22rpx;
}
.slogan{
    font-size: 24rpx;
}
.more{
    display: flex;
    align-items: center;
    align-self: flex-start;
}
.more-text{
    margin-right: 10rpx;
    color:#1f4ba5;
}
.more-img{
    width: 9rpx;
    height: 16rpx;
}
.movies-container{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}
